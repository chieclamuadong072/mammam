<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_suggestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.khtn.mammam.SuggestionActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="@string/btn_near_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_popup_reminder"
                android:id="@+id/btnGanToi"
                android:layout_weight="1"
                android:gravity="left|center_vertical" />

            <Button
                android:text="@string/btn_promotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_popup_reminder"
                android:id="@+id/btnKhuyenMai"
                android:layout_weight="1"
                android:gravity="left|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/btn_book_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_popup_reminder"
                android:id="@+id/btnDatCho"
                android:layout_weight="1"
                android:gravity="left|center_vertical" />

            <Button
                android:text="@string/btn_event"
                android:layout_width="match_parent"
                android:drawableLeft="@android:drawable/ic_popup_reminder"
                android:layout_height="wrap_content"
                android:id="@+id/btnSuKien"
                android:layout_weight="1"
                android:gravity="left|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/btn_top_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_popup_reminder"
                android:id="@+id/btnTopBinhLuan"
                android:layout_weight="1"
                android:gravity="left|center_vertical" />

            <Button
                android:text="@string/btn_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_popup_reminder"
                android:id="@+id/btnMoi"
                android:layout_weight="1"
                android:gravity="left|center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"/>
</LinearLayout>
